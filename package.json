{
  "name": "@spotify/web-scripts-monorepo",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "test": "lerna run test --stream",
    "build": "lerna run build --stream",
    "lint": "web-scripts lint --ignore-path .gitignore",
    "commit": "web-scripts commit --path cz-lerna-changelog",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/config-lerna-scopes": "^8.0.0",
    "@spotify/web-scripts": "^1.0.0",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^2.4.0",
    "lerna": "^3.15.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "web-scripts commitmsg --config commitlint.config.js",
      "pre-commit": "web-scripts precommit --no-tests"
    }
  },
  "dependencies": {
    "lerna-semantic-release": "^9.1.0"
  }
}
